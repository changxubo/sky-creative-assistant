{
  "name": "xhs-mcp-server",
  "version": "0.5.20",
  "description": "Xiaohongshu MCP server enables AI clients to automatically operate Xiaohongshu, facilitating data retrieval, analysis, and export of notes, comments, users, etc.",
  "main": "./out/main/index.js",
  "testCode": "yyds",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:mcp": "cd src-mcpserver && npm run build && cd .. && npm run encrypt:mcp",
    "encrypt:mcp": "javascript-obfuscator src-mcpserver/dist --output src-mcpserver/dist",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build:mcp && npm run build && electron-builder --win",
    "build:mac": "npm run build:mcp && npm run build && electron-builder --mac",
    "build:linux": "npm run build:mcp && npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@aicu/mcp-framework": "^0.5.9",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@ant-design/icons": "^6.0.0",
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@types/electron-store": "^1.3.1",
    "@types/node": "^22.15.2",
    "@vitejs/plugin-react": "^4.3.4",
    "antd": "^5.24.8",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "javascript-obfuscator": "^4.1.1",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  }
}
